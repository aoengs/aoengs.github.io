<div id="appGrid" class="app-grid">
    {apps.map((app) => (
        <a href={app.url} target="_blank" class="app-item">
             <div class="app-icon">{app.icon}</div>
             <div class="app-name">{app.name}</div>
        </a>
    ))}
</div>
<!-- 存储原始数据用于搜索 -->
<script id="appsData" type="application/json">
    {JSON.stringify(apps)}
</script>